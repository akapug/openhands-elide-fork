{
  "name": "openhands-elide-fork",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "cross-env VITE_DEV_URL=http://localhost:5173 concurrently -k -n server,ui -c blue,magenta \"pnpm -C apps/server-elide dev\" \"pnpm -C apps/ui dev\"",
    "build": "pnpm -r --workspace-concurrency=1 --filter ./packages/** --filter ./apps/** build",
    "test": "pnpm -r test || true",
    "e2e": "pnpm -C packages/e2e test",
    "bench": "pnpm -C packages/bench build && node packages/bench/dist/cli.js",
    "bench:trio": "pnpm -C packages/bench build && node packages/bench/dist/trio.js",
    "bench:quad": "pnpm -C packages/bench build && node packages/bench/dist/quad.js",
    "start:all": "pnpm -C packages/bench build && node packages/bench/dist/start-all.js",
    "docker:build": "docker compose -f infra/docker-compose.yml build node-workspace fastapi flask",
    "docker:up": "docker compose -f infra/docker-compose.yml up -d elide express fastapi flask",
    "docker:down": "docker compose -f infra/docker-compose.yml down",
    "docker:bench": "docker compose -f infra/docker-compose.yml run --rm bench"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
